<UserControl x:Class="ControlTalleresMVP.UI.Component.Backup.BackupUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="2000" d:DesignWidth="1500">
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600" Height="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="20,20,20,10">
                    <TextBlock Text="Sistema de Backup" 
                               FontSize="24" FontFamily="Inter 28pt 28pt ExtraBold"
                               Foreground="#3E3E3E" DockPanel.Dock="Left"/>
                    <Button Content="Verificar Integridad" 
                            Command="{Binding VerifyDatabaseCommand}"
                            Style="{StaticResource BotonNormal}" 
                            Height="45" Width="200" DockPanel.Dock="Right"/>
                </DockPanel>

                <!-- Informaci칩n de la Base de Datos -->
                <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1" 
                        CornerRadius="8" Margin="20,0,20,10" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Estado de la Base de Datos" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding DatabaseSizeFormatted, StringFormat=Tama침o: {0}}" 
                                       Foreground="#6B7280" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,15,0">
                            <TextBlock Text="Integridad" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding DatabaseIntegrityOk, Converter={StaticResource BoolToStatusConverter}}" 
                                       Foreground="{Binding DatabaseIntegrityOk, Converter={StaticResource BoolToColorConverter}}" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="Actualizar" 
                                Command="{Binding UpdateDatabaseInfoCommand}"
                                Style="{StaticResource BotonNormal}" 
                                Height="45" Width="120" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Crear Backup -->
                <Border Grid.Row="2" Background="White" BorderBrush="#E9ECEF" BorderThickness="1" 
                        CornerRadius="8" Margin="20,0,20,10" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Crear Nuevo Backup" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBox Text="{Binding BackupName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxCampo}"
                                     Width="400" Margin="0,0,10,0"
                                     Tag="Nombre del backup (opcional)"/>
                            <Button Content="Crear Backup" 
                                    Command="{Binding CreateBackupCommand}"
                                    Style="{StaticResource FeaturedButton}" 
                                    Height="35" Width="120"
                                    IsEnabled="{Binding IsCreatingBackup, Converter={StaticResource InverseBooleanConverter}}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Text="游눠 Se crear치 un backup autom치tico con timestamp si no especificas un nombre" 
                                   Foreground="#6B7280" FontSize="12"/>
                    </Grid>
                </Border>

                <!-- Lista de Backups -->
                <Border Grid.Row="3" Background="White" BorderBrush="#E9ECEF" BorderThickness="1" 
                        CornerRadius="8" Margin="20,0,20,20" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Backups Disponibles" FontWeight="SemiBold" FontSize="16" DockPanel.Dock="Left"/>
                            <Button Content="Actualizar Lista" 
                                    Command="{Binding LoadBackupsCommand}"
                                    Style="{StaticResource BotonNormal}" 
                                    Height="45" Width="100" DockPanel.Dock="Right"/>
                        </DockPanel>

                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding Backups}"
                                  SelectedItem="{Binding BackupSeleccionado, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Style="{StaticResource DataGridRegistros}"
                                  MaxHeight="300"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  SelectionChanged="DataGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Archivo" Binding="{Binding FileName}" Width="*"/>
                                <DataGridTextColumn Header="Fecha" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy HH:mm}" Width="300"/>
                                <DataGridTextColumn Header="Tama침o" Binding="{Binding SizeFormatted}" Width="300"/>
                                <DataGridTemplateColumn Header="Estado" Width="240">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding IsValid, Converter={StaticResource BoolToStatusConverter}}" 
                                                       Foreground="{Binding IsValid, Converter={StaticResource BoolToColorConverter}}"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Informaci칩n del backup seleccionado -->
                        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,10">
                            <TextBlock Text="{Binding BackupSeleccionado.FileName, StringFormat=Backup seleccionado: {0}}" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151" 
                                       Margin="0,0,0,5"
                                       Visibility="{Binding BackupSeleccionado, Converter={StaticResource NotNullConverter}}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Restaurar" 
                                        Command="{Binding RestoreBackupCommand}"
                                        Style="{StaticResource BotonNormal}" 
                                        Height="45" Width="100" Margin="0,0,10,0"
                                        IsEnabled="{Binding BackupSeleccionado, Converter={StaticResource NotNullConverter}}"/>
                                <Button Content="Eliminar" 
                                        Command="{Binding DeleteBackupCommand}"
                                        Style="{StaticResource BotonNormal}" 
                                        Height="45" Width="100" Margin="0,0,10,0"
                                        IsEnabled="{Binding BackupSeleccionado, Converter={StaticResource NotNullConverter}}"/>
                                <Button Content="Limpiar Antiguos" 
                                        Command="{Binding CleanupOldBackupsCommand}"
                                        Style="{StaticResource BotonNormal}" 
                                        Height="45" Width="180"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
