<UserControl x:Class="ControlTalleresMVP.UI.Component.Pago.FormularioPagoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="1000">
    <!-- Atajos de teclado -->
    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelarCommand}"/>
    </UserControl.InputBindings>
    <Grid Background="White">
        <Border Style="{StaticResource BorderGridBase}" Padding="16" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Captura -->
                    <RowDefinition Height="Auto"/>
                    <!-- Acciones -->
                    <RowDefinition Height="*"/>
                    <!-- Tabla cargos -->
                    <RowDefinition Height="Auto"/>
                    <!-- Resumen -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <TextBlock Grid.Row="0" Text="Registrar pago"
                   FontSize="20" FontFamily="Inter 28pt 28pt ExtraBold"
                   Foreground="#3E3E3E" Margin="0,0,0,8"/>

                <!-- CAPTURA (Alumno, Monto, Método) -->
                <!-- CAPTURA (Alumno, Método) -->
                <WrapPanel Grid.Row="1" Margin="0,0,0,10">
                    <!-- Alumno -->
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="* Alumno" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding AlumnoNombre}" Style="{StaticResource TextBoxCampo}"
                                     Cursor="Arrow"
               IsReadOnly="True" Height="30" Width="360" ToolTip="Alumno seleccionado"/>
                            <Button Command="{Binding BuscarAlumnoCommand}"
              Style="{StaticResource SemiFeaturedButton}"
              Height="45" Width="110" Margin="6,0,0,0"
              ToolTip="Buscar alumno">
                                <svgc:SvgViewbox Source="Resources/Icons/LupaIcono.svg"
                         Width="35" Height="35"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                </WrapPanel>


                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,6" HorizontalAlignment="Right">
                    <Button Command="{Binding LimpiarDistribucionCommand}" Style="{StaticResource BotonNormal}"
                  Height="40" MinWidth="120" Content="Limpiar"/>
                </StackPanel>

                <!-- TABLA CARGOS PENDIENTES -->
                <DataGrid Grid.Row="3" ItemsSource="{Binding CargosPendientes, UpdateSourceTrigger=PropertyChanged}"
                  Style="{StaticResource DataGridRegistros}" AutoGenerateColumns="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False"
                  RowHeaderWidth="0" Margin="0,0,0,6">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Aplicar" Width="80"
              Binding="{Binding Seleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="125" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="2*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Saldo actual" Binding="{Binding SaldoPendiente, UpdateSourceTrigger=PropertyChanged, StringFormat=C}" Width="120" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Monto a aplicar" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Monto, UpdateSourceTrigger=PropertyChanged, StringFormat=C}" TextAlignment="Left"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Monto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                           Height="26" Padding="4,0" HorizontalContentAlignment="Left"
                           ToolTip="≤ saldo del cargo y ≤ disponible del pago"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Saldo resultante" Binding="{Binding SaldoResultante, UpdateSourceTrigger=PropertyChanged, StringFormat=C0}"
                                Width="130" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- RESUMEN -->
                <Grid Grid.Row="4" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding MensajeValidacion}" Foreground="Tomato" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" Text="Total del pago:" Margin="12,0,6,0"
                               VerticalAlignment="Center" Foreground="#555"/>
                    <TextBlock Grid.Column="2"
                               Text="{Binding TotalAplicado, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                               FontWeight="Bold" VerticalAlignment="Center"/>
                </Grid>

                <!-- FOOTER -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar" Command="{Binding CancelarPagoCommand}"
                  Style="{StaticResource BotonNormal}" Height="40" MinWidth="120"/>
                    <Button Content="Guardar" Command="{Binding GuardarPagoCommand}"
                  Style="{StaticResource FeaturedButton}" Height="40" MinWidth="140" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
