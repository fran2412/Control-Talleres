<UserControl x:Class="ControlTalleresMVP.UI.Component.Reportes.MenuReporteEstadoPagosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ControlTalleresMVP.Helpers.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NotNullConverter x:Key="NotNullConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Grid.Row="0" Text="{Binding TituloEncabezado}" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- CONTROLES DE FILTRO -->
        <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Filtros" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila: Filtros principales -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Selección de Generación -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Generación:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Generaciones}" 
                                      SelectedItem="{Binding GeneracionSeleccionada}"
                                      DisplayMemberPath="Nombre"
                                      Width="250" Height="35"/>
                        </StackPanel>

                        <!-- Selección de Taller -->
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="Taller:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Talleres}" 
                                      SelectedItem="{Binding TallerSeleccionado}"
                                      DisplayMemberPath="Nombre"
                                      Width="250" Height="35"/>
                        </StackPanel>

                        <!-- Botones -->
                        <Grid Grid.Column="2" VerticalAlignment="Bottom">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Fila superior -->
                            <Button Grid.Row="0" Grid.Column="0" Content="Filtrar" 
                                Command="{Binding FiltrarCommand}"
                                Width="120" Height="35" Margin="8,6"
                                Background="#007ACC" Foreground="White"/>

                            <Button Grid.Row="0" Grid.Column="1" Content="Limpiar filtros" 
                                Command="{Binding LimpiarFiltrosCommand}"
                                Width="120" Height="35" Margin="8,6"
                                Background="#6C757D" Foreground="White"/>

                            <Button Grid.Row="0" Grid.Column="2" Content="Mostrar Todos" 
                                Command="{Binding MostrarTodosCommand}"
                                Width="120" Height="35" Margin="8,6"
                                Background="#28A745" Foreground="White"/>

                            <!-- Fila inferior -->
                            <Button Grid.Row="1" Grid.Column="0" Content="Exportar CSV" 
                                Command="{Binding ExportarCommand}"
                                Width="120" Height="35" Margin="8,6"
                                Background="#17A2B8" Foreground="White"/>

                            <Button Grid.Row="1" Grid.Column="1" Content="Exportar Excel" 
                                Command="{Binding ExportarExcelCommand}"
                                Width="120" Height="35" Margin="8,6"
                                Background="#FD7E14" Foreground="White"/>
                        </Grid>
                    </Grid>

                    <!-- Segunda fila: Información de filtros -->
                    <StackPanel Grid.Row="1" Margin="0,15,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FiltroActual}" 
                                   FontStyle="Italic" 
                                   Foreground="#6C757D" 
                                   FontSize="12"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ESTADÍSTICAS -->
        <Border Grid.Row="2" Background="#E8F4FD" BorderBrush="#B3D9FF" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Alumnos -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalAlumnos}" FontSize="24" FontWeight="Bold" 
                               Foreground="#007ACC" HorizontalAlignment="Center"/>
                    <TextBlock Text="Registros de Pago" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Completos -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding AlumnosCompletos}" FontSize="24" FontWeight="Bold" 
                               Foreground="#28A745" HorizontalAlignment="Center"/>
                    <TextBlock Text="Pagos Completos" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Parciales -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding AlumnosParciales}" FontSize="24" FontWeight="Bold" 
                               Foreground="#FFC107" HorizontalAlignment="Center"/>
                    <TextBlock Text="Pagos Parciales" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Sin Pagos -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding AlumnosSinPagos}" FontSize="24" FontWeight="Bold" 
                               Foreground="#DC3545" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sin Pagos" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Porcentaje -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding PorcentajeRecaudacion, StringFormat={}{0:F1}%}" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="#6F42C1" HorizontalAlignment="Center"/>
                    <TextBlock Text="Recaudación" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ESTADÍSTICAS FINANCIERAS DETALLADAS -->
        <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Resumen Financiero" FontWeight="SemiBold" FontSize="16" 
                           Margin="0,0,0,15" Foreground="#495057"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Monto Total Esperado -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding MontoTotalEsperadoFormateado}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#007ACC" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Esperado" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Monto Recaudado -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding MontoTotalRecaudadoFormateado}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#28A745" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Recaudado" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Monto Pendiente -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding MontoPendienteFormateado}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#DC3545" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Pendiente" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Porcentaje de Recaudación -->
                    <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding PorcentajeRecaudacionFormateado}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#6F42C1" HorizontalAlignment="Center"/>
                        <TextBlock Text="% Recaudación" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Promedio por Alumno -->
                    <StackPanel Grid.Column="4" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding PromedioPagoPorAlumnoFormateado}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#FD7E14" HorizontalAlignment="Center"/>
                        <TextBlock Text="Promedio/Alumno" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Talleres Activos -->
                    <StackPanel Grid.Column="5" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding TalleresActivos}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#20C997" HorizontalAlignment="Center"/>
                        <TextBlock Text="Talleres Activos" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- ESTADÍSTICAS DE CLASES -->
        <Border Grid.Row="4" Background="#FFF3CD" BorderBrush="#FFEAA7" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Resumen de Clases" FontWeight="SemiBold" FontSize="16" 
                           Margin="0,0,0,15" Foreground="#856404"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Clases Esperadas -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding TotalClasesEsperadas}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#007ACC" HorizontalAlignment="Center"/>
                        <TextBlock Text="Clases Esperadas" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Total Clases Pagadas -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding TotalClasesPagadas}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#28A745" HorizontalAlignment="Center"/>
                        <TextBlock Text="Clases Pagadas" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Total Clases Pendientes -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding TotalClasesPendientes}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#DC3545" HorizontalAlignment="Center"/>
                        <TextBlock Text="Clases Pendientes" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Porcentaje Clases Pagadas -->
                    <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding PorcentajeClasesPagadas, StringFormat={}{0:F1}%}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#6F42C1" HorizontalAlignment="Center"/>
                        <TextBlock Text="% Clases Pagadas" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Promedio Clases por Alumno -->
                    <StackPanel Grid.Column="4" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Text="{Binding PromedioClasesPorAlumno, StringFormat={}{0:F1}}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#FD7E14" HorizontalAlignment="Center"/>
                        <TextBlock Text="Promedio/Alumno" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- TABLA DE DATOS -->
        <DataGrid Grid.Row="5" ItemsSource="{Binding EstadosPago}" 
                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  AlternatingRowBackground="#F8F9FA" RowHeaderWidth="0"
                  MaxHeight="310"
                  Margin="0,0,0,15">
            
            <DataGrid.Columns>
                <!-- Alumno -->
                <DataGridTextColumn Header="Alumno" Binding="{Binding NombreAlumno}" 
                                    Width="150" IsReadOnly="True"/>
                
                <!-- Taller -->
                <DataGridTextColumn Header="Taller" Binding="{Binding NombreTaller}" 
                                    Width="200" IsReadOnly="True"/>
                
                <!-- Fechas -->
                <DataGridTextColumn Header="Inicio" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" 
                                    Width="80" IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Fin" Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}" 
                                    Width="80" IsReadOnly="True"/>
                
                <!-- Clases -->
                <DataGridTextColumn Header="Clases" Binding="{Binding ClasesTotales}" 
                                    Width="60" IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Pagadas" Binding="{Binding ClasesPagadas}" 
                                    Width="70" IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Pendientes" Binding="{Binding ClasesPendientes}" 
                                    Width="80" IsReadOnly="True"/>
                
                <!-- Montos -->
                <DataGridTextColumn Header="Total" Binding="{Binding MontoTotal, StringFormat=C2}" 
                                    Width="80" IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Pagado" Binding="{Binding MontoPagado, StringFormat=C2}" 
                                    Width="80" IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Pendiente" Binding="{Binding MontoPendiente, StringFormat=C2}" 
                                    Width="80" IsReadOnly="True"/>
                
                <!-- Estado -->
                <DataGridTextColumn Header="Estado" Binding="{Binding EstadoPago}" 
                                    Width="200" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- MENSAJE DE ESTADO -->
        <Border Grid.Row="6" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
                CornerRadius="6" Padding="10" 
                Visibility="{Binding MensajeEstado, Converter={StaticResource NotNullConverter}}">
            <TextBlock Text="{Binding MensajeEstado}" FontStyle="Italic" 
                       Foreground="#6C757D" HorizontalAlignment="Center"/>
        </Border>

        <!-- INDICADOR DE CARGA -->
        <Border Grid.Row="0" Grid.RowSpan="6" Background="#80000000" 
                Visibility="{Binding Cargando, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Cargando..." FontSize="18" Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
            </StackPanel>
        </Border>
    </Grid>
</ScrollViewer>

</UserControl>
