<UserControl x:Class="ControlTalleresMVP.UI.Component.Clases.ResumenAsistenciaDiaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ControlTalleresMVP.Helpers.Converters"
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Clases"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="900">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" Padding="16" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Encabezado -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Resumen del día" 
                               FontSize="18" FontFamily="Inter 28pt 28pt ExtraBold"
                               Foreground="#3E3E3E" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding FechaResumen, Mode=TwoWay}"
                                Margin="12,0,12,0" VerticalAlignment="Center" Width="150"/>
                    <TextBlock Text="{Binding FechaTexto}" 
                               FontSize="16" FontFamily="Inter 28pt 28pt SemiBold"
                               Foreground="#6B7280" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Sin talleres para la fecha seleccionada -->
                <Border Grid.Row="1" 
                        Visibility="{Binding HayTalleresHoy, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" 
                        CornerRadius="8" Padding="20">
                    <TextBlock Text="No hay talleres programados para este día." 
                               Foreground="#9CA3AF" FontSize="14" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Tarjetas de talleres -->
                <ItemsControl Grid.Row="1" 
                              ItemsSource="{Binding ResumenTalleres}"
                              Visibility="{Binding HayTalleresHoy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,12,12" Padding="16" MinWidth="180"
                                    Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1"
                                    CornerRadius="10">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="6" ShadowDepth="2"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Nombre del taller -->
                                    <TextBlock Grid.Row="0" Text="{Binding TallerNombre}"
                                               FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"
                                               TextTrimming="CharacterEllipsis" MaxWidth="180"/>

                                    <!-- Barra de progreso -->
                                    <Grid Grid.Row="1" Margin="0,10,0,6">
                                        <ProgressBar Height="12" 
                                                     Minimum="0" 
                                                     Maximum="{Binding AlumnosInscritos}"
                                                     Value="{Binding AlumnosAsistentes}"
                                                     Background="#E5E7EB" Foreground="#10B981"
                                                     BorderThickness="0">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ProgressBar">
                                                                <Grid>
                                                                    <Border x:Name="PART_Track" CornerRadius="6" 
                                                                            Background="{TemplateBinding Background}"/>
                                                                    <Border x:Name="PART_Indicator" CornerRadius="6" 
                                                                            HorizontalAlignment="Left"
                                                                            Background="{TemplateBinding Foreground}">
                                                                        <Border.Width>
                                                                            <MultiBinding Converter="{x:Static local:ProgressBarWidthConverter.Instance}">
                                                                                <Binding Path="ActualWidth" RelativeSource="{RelativeSource TemplatedParent}"/>
                                                                                <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                                                                <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}"/>
                                                                            </MultiBinding>
                                                                        </Border.Width>
                                                                    </Border>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                    </Grid>

                                    <!-- Conteo -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="#10B981">
                                            <TextBlock.Text>
                                                <Binding Path="AlumnosAsistentes"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Text=" / " FontSize="18" Foreground="#9CA3AF" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                                        <TextBlock FontSize="18" Foreground="#6B7280" VerticalAlignment="Bottom" Margin="0,0,0,2">
                                            <TextBlock.Text>
                                                <Binding Path="AlumnosInscritos"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Text=" asistencia" FontSize="12" Foreground="#9CA3AF" 
                                                   VerticalAlignment="Bottom" Margin="4,0,0,4"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
