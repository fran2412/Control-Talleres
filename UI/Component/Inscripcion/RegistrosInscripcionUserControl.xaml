<UserControl x:Class="ControlTalleresMVP.UI.Component.Inscripcion.RegistrosInscripcionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Inscripcion"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="500" Height="auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--TextBox de búsqueda-->
                <TextBox Grid.Row="0" Margin="20,20,190,0"
         HorizontalAlignment="Stretch" Style="{StaticResource TextBoxCampo}"
         Text="{Binding FiltroRegistros, UpdateSourceTrigger=PropertyChanged, Delay=300}"
         Tag="Buscar"
         FontSize="18"/>

                <!--Botón de búsqueda-->
                <Button Height="50" Width="150" Style="{StaticResource BotonNormal}" HorizontalAlignment="Right" Margin="0,20,20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <svgc:SvgViewbox Source="Resources/Icons/LupaNegraIcono.svg"
                         Width="20" Height="20" Grid.Column="0"
                         Margin="0,0,10,0"/>
                        <TextBlock Text="BUSCAR" VerticalAlignment="Center"
                   FontSize="18" 
                   FontWeight="Regular"
                   Grid.Column="1"
                   Foreground="#333333"/>
                    </Grid>
                </Button>

                <!--DataGrid-->
                <DataGrid Style="{StaticResource DataGridRegistros}" Grid.Row="1" Margin="20"
          ItemsSource="{Binding RegistrosView}" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn">
                    <DataGrid.Columns>
                        <!-- Columna fija de acciones -->
                        <DataGridTemplateColumn Header="Acciones">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource BotonTransparente}" Command="{Binding DataContext.CancelarInscripcionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    CommandParameter="{Binding Id}" Cursor="Hand" Margin="6,0,6,0">
                                            <svgc:SvgViewbox Source="Resources\Icons\EliminarRegistro.svg" Width="35" Height="35"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
