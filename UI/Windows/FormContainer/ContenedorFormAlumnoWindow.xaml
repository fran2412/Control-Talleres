<Window x:Class="ControlTalleresMVP.UI.Windows.FormContainer.ContenedorFormAlumnoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTalleresMVP.UI.Windows.FormContainer"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        Title="Formulario alumno" Width="400">
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600"
        BorderThickness="1,1,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="33.2"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <Label Content="Editar alumno" FontSize="20" FontFamily="Inter 28pt 28pt ExtraBold"
HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1,-1,0,0" Foreground="#FF3E3E3E" Grid.Row="0"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" MaxHeight="400" Margin="15,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <!-- Datos del alumno -->
                        <WrapPanel Grid.Row="0">
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Nombre completo" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox x:Name="NombreTextBox" 
                         Style="{StaticResource TextBoxCampo}" 
                                         ToolTip="Ingrese el nombre del alumno"
                         Height="30" Width="260"
                         Tag="Ej. Juan Rodolfo Fernández López"/>
                            </StackPanel>

                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Teléfono" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox x:Name="TelefonoTextBox"
                         Style="{StaticResource TextBoxCampo}"
                         ToolTip="Ingrese un número de teléfono de 10 dígitos"
                         Height="30" Width="260"
                         Tag="Ej. 1234567890"/>
                            </StackPanel>

                            <!-- Sede -->
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Sede" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox x:Name="SedeComboBox"
                                          DisplayMemberPath="Nombre"
                                          SelectedValuePath="SedeId"
                                          ToolTip="Seleccione una sede"
                                          Width="260" Height="30"
                                          Style="{StaticResource MinimalComboBoxStyle}" />
                            </StackPanel>

                            <!-- Promotor -->
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Promotor" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox x:Name="PromotorComboBox"
                                          DisplayMemberPath="Nombre"
                                          SelectedValuePath="PromotorId"
                                          ToolTip="Seleccione un promotor"
                                          Width="260" Height="30"
                                          Style="{StaticResource MinimalComboBoxStyle}"/>
                            </StackPanel>

                            <!-- Información de beca -->
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Beca" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <CheckBox x:Name="EsBecadoCheckBox"
                                          Content="Alumno becado"
                                          FontSize="14"
                                          Height="30"
                                          VerticalAlignment="Center"
                                          Checked="EsBecadoCheckBox_Checked"
                                          Unchecked="EsBecadoCheckBox_Unchecked"/>
                            </StackPanel>

                            <!-- Descuento por clase -->
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Descuento por clase" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <xctk:CalculatorUpDown x:Name="DescuentoUpDown"
                                                       FormatString="C2"
                                                       CultureInfo="es-MX"
                                                       Minimum="0"
                                                       ClipValueToMinMax="True"
                                                       Height="30" Width="260"
                                                       HorizontalContentAlignment="Right"
                                                       ToolTip="Monto que se descontará de cada clase"/>
                            </StackPanel>
                        </WrapPanel>

                    </Grid>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">

                    <!-- Botón Cancelar -->
                    <Button Content="Cancelar" HorizontalAlignment="Right" VerticalAlignment="Center"
                            ToolTip="Cancelar la edición"
                            Click="Cancelar_Click"
                    Width="auto" Height="50" Style="{StaticResource BotonNormal}"/>

                    <!-- Botón Principal (Agregar o Guardar) -->
                    <Button x:Name="EditarAlumnoButton" Content="Editar alumno" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Width="auto" Height="50" Margin="15,0,20,0" 
                            Click="EditarAlumno_Click"
                            ToolTip="Edita al alumno"
                            Style="{StaticResource FeaturedButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
