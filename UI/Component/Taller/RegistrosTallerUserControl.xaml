<UserControl x:Class="ControlTalleresMVP.UI.Component.Taller.RegistrosTallerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Taller"
             mc:Ignorable="d" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <local:TimeSpanConverter x:Key="TimeSpanConverter"/>
        <local:DiaSemanaToTextoConverter x:Key="DiaSemanaToTextoConverter"/>
        <local:NullableDateTimeConverter x:Key="NullableDateTimeConverter"/>
    </UserControl.Resources>
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="500" Height="auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--TextBox de búsqueda-->
                <TextBox Grid.Row="0" Margin="20,20,190,0"
         HorizontalAlignment="Stretch" Style="{StaticResource TextBoxCampo}"
         Text="{Binding FiltroRegistros, UpdateSourceTrigger=PropertyChanged, Delay=300}"
         Tag="Buscar"
         FontSize="18"/>

                <!--Botón de búsqueda-->
                <Button Height="50" Width="150" Style="{StaticResource BotonNormal}" HorizontalAlignment="Right" Margin="0,20,20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <svgc:SvgViewbox Source="Resources/Icons/LupaNegraIcono.svg"
                         Width="20" Height="20" Grid.Column="0"
                         Margin="0,0,10,0"/>
                        <TextBlock Text="BUSCAR" VerticalAlignment="Center"
                   FontSize="18" 
                   FontWeight="Regular"
                   Grid.Column="1"
                   Foreground="#333333"/>
                    </Grid>
                </Button>

                <!--DataGrid-->
                <DataGrid Style="{StaticResource DataGridRegistros}" Grid.Row="1" Margin="20"
          ItemsSource="{Binding RegistrosView}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <!-- Columna fija de acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource BotonTransparente}"
                                        Click="EditarButton_Click"
                                        Cursor="Hand" Margin="6,0,6,0">
                                            <svgc:SvgViewbox Source="Resources\Icons\EditarRegistro.svg" Width="35" Height="35"/>
                                        </Button>

                                        <Button Style="{StaticResource BotonTransparente}" Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    CommandParameter="{Binding}" Cursor="Hand" Margin="6,0,6,0">
                                            <svgc:SvgViewbox Source="Resources\Icons\EliminarRegistro.svg" Width="35" Height="35"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Columnas manuales -->
                        <DataGridTextColumn Header="Nombre del taller" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Día de clase" Binding="{Binding DiaSemana, Converter={StaticResource DiaSemanaToTextoConverter}}" Width="120"/>
                        <DataGridTextColumn Header="Horario de inicio" Binding="{Binding HorarioInicio, Converter={StaticResource TimeSpanConverter}}" Width="120"/>
                        <DataGridTextColumn Header="Horario de fin" Binding="{Binding HorarioFin, Converter={StaticResource TimeSpanConverter}}" Width="120"/>
                        <DataGridTextColumn Header="Fecha de inicio" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" Width="120"/>
                        <DataGridTextColumn Header="Fecha de fin" Binding="{Binding FechaFin, Converter={StaticResource NullableDateTimeConverter}}" Width="120"/>
                        <DataGridTextColumn Header="Fecha de alta" Binding="{Binding CreadoEn, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
