<UserControl x:Class="ControlTalleresMVP.UI.Component.Administracion.RegistrosGeneracionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Administracion"
             mc:Ignorable="d"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="710" Height="auto">
        <StackPanel>
            <TextBlock Text="Registros de generación" FontSize="20" Margin="10,10,0,20"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--TextBox de búsqueda-->
                <TextBox Grid.Row="0" Margin="20,20,190,0"
     HorizontalAlignment="Stretch" Style="{StaticResource TextBoxCampo}"
     Text="{Binding FiltroRegistros, UpdateSourceTrigger=PropertyChanged, Delay=300}"
     Tag="Buscar"
     FontSize="18"/>
                <!--Botón de búsqueda-->
                <Button Height="50" Width="150" Style="{StaticResource BotonNormal}" HorizontalAlignment="Right" Margin="0,20,20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <svgc:SvgViewbox Source="Resources/Icons/LupaNegraIcono.svg"
                     Width="20" Height="20" Grid.Column="0"
                     Margin="0,0,10,0"/>
                        <TextBlock Text="BUSCAR" VerticalAlignment="Center"
               FontSize="18" 
               FontWeight="Regular"
               Grid.Column="1"
               Foreground="#333333"/>
                    </Grid>
                </Button>

                <!--DataGrid-->
                <DataGrid Style="{StaticResource DataGridRegistros}" Grid.Row="1" Margin="20"
      ItemsSource="{Binding RegistrosView}" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                          MaxHeight="374">
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
                    <Button Style="{StaticResource BotonNormal}" Content="Finalizar generación" VerticalAlignment="Center"
                        Height="45" FontSize="16" x:Name="FinalizarGeneracionButton" Margin="0,0,10,0"
                        Visibility="Collapsed" Click="FinalizarGeneracionButton_Click"/>
                    <Button Style="{StaticResource FeaturedButton}" Content="Iniciar nueva generación" VerticalAlignment="Center"
                        Height="45" FontSize="16" x:Name="IniciarGeneracionButton"
                        Visibility="Collapsed" Click="IniciarGeneracionButton_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
