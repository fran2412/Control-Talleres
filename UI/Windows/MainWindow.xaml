<Window x:Class="ControlTalleresMVP.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTalleresMVP.UI.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Login" Height="540" Width="520">

    <Grid Background="{StaticResource BrushFondo}">
        <Rectangle HorizontalAlignment="Center" Height="400" Stroke="White" VerticalAlignment="Center" Width="350" RadiusX="38" RadiusY="38" Fill="White"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Título -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-23,0,0">
                <Label Content="Control talleres" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" 
                       FontFamily="Inter 28pt 28pt SemiBold" FontSize="22" Foreground="Black" Margin="0,-10,0,0"/>
                <Label Content="Iniciar sesión" HorizontalAlignment="Center" Margin="0,27,0,0" 
                       VerticalAlignment="Top" FontFamily="Inter 28pt 28pt SemiBold" FontSize="18" Foreground="Black"/>
            </Grid>

            <!-- Usuario -->
            <Grid HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top">
                <TextBox x:Name="txtUsuario"
                         Style="{DynamicResource UserLoginTextBox}" 
                         HorizontalAlignment="Center" Height="35" Margin="0,25,0,0" 
                         Tag="Nombre de usuario" VerticalAlignment="Top" Width="211"/>
                <Label Style="{StaticResource LoginLabel}" Content="Usuario" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="84" Foreground="#FF333333"/>
            </Grid>

            <!-- Contraseña -->
            <Grid HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top">
                <PasswordBox x:Name="txtPassword"
                             Style="{StaticResource LoginPasswordBox}" 
                             HorizontalAlignment="Center" Height="35" Margin="0,24,0,0" 
                             VerticalAlignment="Top" Width="211"
                             PasswordChanged="txtPassword_PasswordChanged"
                             Tag="Contraseña"/>
                <Label Style="{StaticResource LoginLabel}" Content="Contraseña" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="84" Foreground="#FF333333"/>
            </Grid>

            <!-- Botón -->
            <Button Style="{StaticResource FeaturedButton}" Content="Iniciar sesión" 
                    HorizontalAlignment="Center" Height="43" Margin="0,200,0,0" VerticalAlignment="Top" Width="222"
                    Click="LoginButton_Click"/>
        </Grid>
    </Grid>
</Window>
