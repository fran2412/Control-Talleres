<Window x:Class="ControlTalleresMVP.UI.Windows.FormContainer.ContenedorFormTallerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTalleresMVP.UI.Windows.FormContainer"
        xmlns:converter="clr-namespace:ControlTalleresMVP.UI.Component.Taller"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        Title="ContenedorFormTallerWindow" Width="400">
    <Window.Resources>
        <!-- Lista de valores del enum DayOfWeek -->
        <ObjectDataProvider x:Key="DayOfWeekValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="sys:DayOfWeek"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <!-- Converter para mostrar los nombres en español -->
        <converter:DiaSemanaToTextoConverter x:Key="DiaSemanaToTexto"/>
    </Window.Resources>
    
    <Grid Background="White">
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600" Height="auto"
        BorderThickness="1,1,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="33.2"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Label Content="Editar taller" FontSize="20" FontFamily="Inter 28pt 28pt ExtraBold"
HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1,-1,0,0" Foreground="#FF3E3E3E" Grid.Row="0"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" MaxHeight="200" Margin="15,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <WrapPanel Grid.Row="0">
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Nombre del taller" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox x:Name="NombreTextBox" 
                                         Style="{StaticResource TextBoxCampo}" 
                                         ToolTip="Ingrese el nombre del taller"
                                         Height="30" Width="260"
                                         Tag="Ej. Uñas"/>
                            </StackPanel>

                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Horario del taller" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox x:Name="HorarioTextBox"  
                                         Style="{StaticResource TextBoxCampo}" 
                                         ToolTip="Ingrese el horario del taller"
                                         Height="30" Width="260"
                                         Tag="Ej. Sábados de 12:00 - 1:00"/>
                            </StackPanel>

                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Día de clase" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox x:Name="DiaSemanaComboBox"
                                ItemsSource="{Binding Source={StaticResource DayOfWeekValues}}"
                                SelectedValuePath="."
                                Height="30"
                                Width="260"
                                Style="{StaticResource MinimalComboBoxStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource DiaSemanaToTexto}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </WrapPanel>
                    </Grid>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Cancelar" HorizontalAlignment="Right" VerticalAlignment="Center"
                            ToolTip="Cancelar la edición"
                            Click="Cancelar_Click"
                            Width="auto" Height="50" Style="{StaticResource BotonNormal}" Command="{Binding CancelarRegistrarItemCommand}"/>
                    <!-- Botón Principal (Agregar o Guardar) -->
                    <Button x:Name="EditarTallerButton" Content="Editar taller" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Width="auto" Height="50" Margin="15,0,20,0" 
                            ToolTip="Editar el taller"
                            Click="EditarTaller_Click"
                            Style="{StaticResource FeaturedButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
