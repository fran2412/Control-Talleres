<UserControl x:Class="ControlTalleresMVP.UI.Component.Pago.FormularioPagoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Pago"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="400" Height="auto"
        BorderThickness="1,1,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="33.2"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Label Content="Registrar pago " FontSize="20" FontFamily="Inter 28pt 28pt ExtraBold"
HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1,-1,0,0" Foreground="#FF3E3E3E" Grid.Row="0"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" MaxHeight="200" Margin="15,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <WrapPanel Grid.Row="0">
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Id Inscripción" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox
                                    Style="{StaticResource TextBoxCampo}" 
                                         Height="30" HorizontalAlignment="Left" Width="260"
                                         Tag="Ej. id 2"/>
                            </StackPanel>

                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Monto" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox
                                    Style="{StaticResource TextBoxCampo}"
                                         Text="{Binding TextBoxMonto, StringFormat=C}"
                                         Height="30" HorizontalAlignment="Left" Width="260"
                                         PreviewTextInput="TextBoxMonto_PreviewTextInput"
                                         Tag="Ej. 400"/>
                            </StackPanel>
                        </WrapPanel>
                    </Grid>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Botón Cancelar -->
                    <Button Content="CANCELAR" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Width="auto" Height="50" Style="{StaticResource BotonNormal}"/>
                    <!-- Botón Principal (Agregar o Guardar) -->
                    <Button x:Name="RegistrarTallerButton" Content="Registrar pago" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="auto" Height="50" Margin="15,0,20,0" Style="{StaticResource FeaturedButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>