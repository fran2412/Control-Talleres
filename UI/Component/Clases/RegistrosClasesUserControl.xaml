<UserControl x:Class="ControlTalleresMVP.UI.Component.Clases.RegistrosClasesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Clases"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600" Height="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Barra superior: búsqueda y acciones -->
                <Grid Grid.Row="0" Margin="20,20,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Búsqueda libre -->
                    <TextBox Grid.Column="0" Margin="0,0,10,0"
                         Style="{StaticResource TextBoxCampo}"
                         Text="{Binding FiltroRegistrosClases, UpdateSourceTrigger=PropertyChanged, Delay=250}"
                         Tag="Buscar (Alumno, Taller, Estado)"
                         FontSize="16"/>

                    <!-- Buscar alumno -->
                    <Button Grid.Column="1" Width="170" Height="44" Margin="0,0,10,0"
                        Style="{StaticResource BotonNormal}"
                        Command="{Binding BuscarAlumnoRegistrosAsyncCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Seleccionar Alumno" VerticalAlignment="Center" FontSize="16"/>
                        </StackPanel>
                    </Button>

                    <!-- Limpiar filtros -->
                    <Button Grid.Column="2" Width="140" Height="44"
                        Style="{StaticResource BotonNormal}"
                        Command="{Binding LimpiarFiltrosRegistrosAsyncCommand}">
                        <TextBlock Text="Limpiar" VerticalAlignment="Center" FontSize="16"/>
                    </Button>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" Margin="20"
                      ItemsSource="{Binding RegistrosClasesView}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Style="{StaticResource DataGridRegistros}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Acciones" Width="95">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource BotonTransparente}"
                                            Command="{Binding DataContext.CancelarClaseAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding ClaseId}"
                                            Cursor="Hand" Margin="6,0,6,0" ToolTip="Cancelar clase">
                                            <svgc:SvgViewbox Source="Resources/Icons/EliminarRegistro.svg" Width="28" Height="28"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Fecha"
                                        Binding="{Binding FechaClase, StringFormat=dd/MM/yyyy}"
                                        Width="110"/>
                        <DataGridTextColumn Header="Taller"
                                        Binding="{Binding TallerNombre}"
                                        Width="*"/>
                        <DataGridTextColumn Header="Alumno"
                                        Binding="{Binding AlumnoNombre}"
                                        Width="200"/>
                        <DataGridTextColumn Header="Estado"
                                        Binding="{Binding EstadoTexto}"
                                        Width="110"/>
                        <DataGridTextColumn Header="Costo"
                                        Binding="{Binding Monto, StringFormat=C}"
                                        Width="110"/>
                        <DataGridTextColumn Header="Pagado"
                                        Binding="{Binding MontoPagado, StringFormat=C}"
                                        Width="110"/>
                        <DataGridTextColumn Header="Saldo"
                                        Binding="{Binding SaldoActual, StringFormat=C}"
                                        Width="110"/>
                        <DataGridTextColumn Header="%"
                                        Binding="{Binding PorcentajePagado}"
                                        Width="60"/>
                        <DataGridTextColumn Header="#Pagos"
                                        Binding="{Binding PagosCount}"
                                        Width="80"/>
                        <DataGridTextColumn Header="Último Pago"
                                        Binding="{Binding UltimoPagoFecha, StringFormat=dd/MM/yyyy HH:mm}"
                                        Width="150"/>
                        <DataGridTextColumn Header="Método"
                                        Binding="{Binding UltimoPagoMetodo}"
                                        Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Totales -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20" >
                    <TextBlock Text="{Binding TotalMontoClases, StringFormat=Total: {0:C}}" FontSize="16" FontWeight="SemiBold" Margin="0,0,24,0"/>
                    <TextBlock Text="{Binding TotalPagadoClases, StringFormat=Pagado: {0:C}}" FontSize="16" FontWeight="SemiBold" Margin="0,0,24,0"/>
                    <TextBlock Text="{Binding TotalSaldoClases, StringFormat=Saldo: {0:C}}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
