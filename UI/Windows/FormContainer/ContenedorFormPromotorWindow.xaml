<Window x:Class="ControlTalleresMVP.UI.Windows.FormContainer.ContenedorFormPromotorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTalleresMVP.UI.Windows.FormContainer"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        Title="Formulario promotor" Width="400">
    <Grid Background="White">
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600" Height="auto"
        BorderThickness="1,1,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="33.2"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Label Content="Editar promotor" FontSize="20" FontFamily="Inter 28pt 28pt ExtraBold"
HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1,-1,0,0" Foreground="#FF3E3E3E" Grid.Row="0"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" MaxHeight="200" Margin="15,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <WrapPanel Grid.Row="0">
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Nombre completo" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox x:Name="NombreTextBox" 
                                        Style="{StaticResource TextBoxCampo}" 
                                        ToolTip="Ingrese el nombre del promotor"
                                        Height="30" Width="260"
                                        Tag="Ej. Angel Noel Rodríguez García"/>
                            </StackPanel>
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Teléfono" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox x:Name="TelefonoTextBox" 
                                        Style="{StaticResource TextBoxCampo}" 
                                        ToolTip="Ingrese el teléfono del promotor"
                                        Height="30" Width="260"
                                        Tag="Ej. 1234567890"/>
                            </StackPanel>
                        </WrapPanel>
                    </Grid>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Botón Cancelar -->
                    <Button Content="Cancelar" HorizontalAlignment="Right" VerticalAlignment="Center"
                            ToolTip="Cancelar la edición"
                            Click="Cancelar_Click"
                            Width="auto" Height="50" Style="{StaticResource BotonNormal}" Command="{Binding CancelarRegistrarItemCommand}"/>
                    <!-- Botón Principal (Agregar o Guardar) -->
                    <Button x:Name="EditarPromotorButton" Content="Editar promotor" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Command="{Binding RegistrarItemCommand}"
                            Width="auto" Height="50" Margin="15,0,20,0" 
                            ToolTip="Editar al promotor"
                            Click="EditarPromotor_Click"
                            Style="{StaticResource FeaturedButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>