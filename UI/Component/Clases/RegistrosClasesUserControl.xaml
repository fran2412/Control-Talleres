<UserControl x:Class="ControlTalleresMVP.UI.Component.Clases.RegistrosClasesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600" Height="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Barra superior: búsqueda, rango y acciones -->
                <Grid Grid.Row="0" Margin="20,20,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Buscar -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Desde -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Hasta -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Aplicar -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Limpiar -->
                    </Grid.ColumnDefinitions>

                    <!-- Búsqueda libre -->
                    <TextBox Grid.Column="0" Margin="0,0,10,0"
                             Style="{StaticResource TextBoxCampo}"
                             Text="{Binding FiltroRegistrosClases, UpdateSourceTrigger=PropertyChanged, Delay=250}"
                             Tag="Buscar (Alumno, Taller, Estado)"
                             FontSize="16"/>

                    <!-- Fecha DESDE -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock Text="Desde:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <DatePicker SelectedDate="{Binding FechaDesdeRegistros, Mode=TwoWay}"
                                    Width="140"
                                    IsEnabled="{Binding PuedeEditarRangoFechas}"/>
                    </StackPanel>

                    <!-- Fecha HASTA -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <DatePicker SelectedDate="{Binding FechaHastaRegistros, Mode=TwoWay}"
                                    Width="140"
                                    IsEnabled="{Binding PuedeEditarRangoFechas}"/>
                    </StackPanel>

                    <!-- Toggle filtro por día -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <CheckBox Content="Filtrar por día específico"
                                  IsChecked="{Binding FiltrarPorDiaEspecifico}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Día específico -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Día:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <DatePicker SelectedDate="{Binding FechaFiltroDia, Mode=TwoWay}"
                                    Width="140"
                                    IsEnabled="{Binding PuedeEditarDia}"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" Margin="20"
                          ItemsSource="{Binding RegistrosClasesView}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Style="{StaticResource DataGridRegistros}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Acciones" Width="95">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource BotonTransparente}"
                                                Command="{Binding DataContext.CancelarClaseAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding ClaseId}"
                                                Cursor="Hand" Margin="6,0,6,0" ToolTip="Cancelar clase">
                                            <svgc:SvgViewbox Source="Resources/Icons/EliminarRegistro.svg" Width="28" Height="28"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Columnas del DTO -->
                        <DataGridTextColumn Header="Fecha"       Binding="{Binding FechaClase, StringFormat=dd/MM/yyyy}" Width="110"/>
                        <DataGridTextColumn Header="Taller"       Binding="{Binding TallerNombre}" Width="*"/>
                        <DataGridTextColumn Header="Alumno"       Binding="{Binding AlumnoNombre}" Width="200"/>
                        <DataGridTextColumn Header="Estado"       Binding="{Binding EstadoTexto}" Width="110"/>
                        <DataGridTextColumn Header="Valor Total"  Binding="{Binding MontoTotal, StringFormat=C}" Width="110"/>
                        <DataGridTextColumn Header="Ingreso del día" Binding="{Binding IngresoPorFecha, StringFormat=C}" Width="110" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Pagado Acum." Binding="{Binding MontoPagado, StringFormat=C}" Width="110"/>
                        <DataGridTextColumn Header="Saldo"        Binding="{Binding SaldoActual, StringFormat=C}" Width="110"/>
                        <DataGridTextColumn Header="%"            Binding="{Binding PorcentajePagado}" Width="60"/>
                        <DataGridTextColumn Header="Último Pago"  Binding="{Binding UltimoPagoFecha, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Totales -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
                    <TextBlock Text="{Binding TotalMontoClases, StringFormat=Valor Total: {0:C}}"  FontSize="16" FontWeight="SemiBold" Margin="0,0,24,0" Foreground="Gray"/>
                    <TextBlock Text="{Binding TotalIngresoReal, StringFormat=Ingreso del día: {0:C}}" FontSize="16" FontWeight="Bold" Margin="0,0,24,0" Foreground="#2E7D32"/>
                    <TextBlock Text="{Binding TotalPagadoClases, StringFormat=Pagado Acum: {0:C}}" FontSize="16" FontWeight="SemiBold" Margin="0,0,24,0"/>
                    <TextBlock Text="{Binding TotalSaldoClases, StringFormat=Saldo: {0:C}}"  FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
