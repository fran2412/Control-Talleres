<UserControl x:Class="ControlTalleresMVP.UI.Component.Reportes.MenuReporteInscripcionesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Reportes"
             xmlns:converters="clr-namespace:ControlTalleresMVP.Helpers.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:NotNullConverter x:Key="NotNullConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TTULO -->
            <TextBlock Grid.Row="0" Text="{Binding TituloEncabezado}" 
               FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- CONTROLES DE FILTRO -->
            <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="1" 
            CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Filtros" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Primera fila: Filtros principales -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Selecci贸n de Generaci贸n -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Generaci贸n:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Generaciones}" 
                                  SelectedItem="{Binding GeneracionSeleccionada}"
                                  DisplayMemberPath="Nombre"
                                  Width="250" Height="35"/>
                            </StackPanel>

                            <!-- Selecci贸n de Taller -->
                            <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                <TextBlock Text="Taller:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Talleres}" 
                                  SelectedItem="{Binding TallerSeleccionado}"
                                  Width="250" Height="35">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center"/>
                                                <TextBlock Text=" (ELIMINADO)" 
                                                   FontWeight="Bold" 
                                                   Foreground="#DC3545" 
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding Eliminado, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Selecci贸n de Promotor -->
                            <StackPanel Grid.Column="2" Margin="0,0,20,0">
                                <TextBlock Text="Promotor:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Promotores}" 
                                  SelectedItem="{Binding PromotorSeleccionado}"
                                  DisplayMemberPath="Nombre"
                                  Width="250" Height="35"/>
                            </StackPanel>

                            <!-- Botones -->
                            <Grid Grid.Column="3" VerticalAlignment="Bottom">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Fila superior -->
                                <Button Grid.Row="0" Grid.Column="0" Content="Filtrar" 
                            Command="{Binding FiltrarCommand}"
                            Width="120" Height="35" Margin="8,6"
                            Background="#007ACC" Foreground="White"/>

                                <Button Grid.Row="0" Grid.Column="1" Content="Limpiar todos" 
                            Command="{Binding LimpiarFiltrosCommand}"
                            Width="120" Height="35" Margin="8,6"
                            Background="#6C757D" Foreground="White"/>

                                <Button Grid.Row="0" Grid.Column="2" Content="Reordenar" 
                            Command="{Binding ReordenarPorEstadoPagoCommand}"
                            Width="120" Height="35" Margin="8,6"
                            Background="#6F42C1" Foreground="White"/>

                                <!-- Fila inferior -->
                                <Button Grid.Row="1" Grid.Column="0" Content="Exportar CSV" 
                            Command="{Binding ExportarCommand}"
                            Width="120" Height="35" Margin="8,6"
                            Background="#17A2B8" Foreground="White"/>

                                <Button Grid.Row="1" Grid.Column="1" Content="Exportar Excel" 
                            Command="{Binding ExportarExcelCommand}"
                            Width="120" Height="35" Margin="8,6"
                            Background="#FD7E14" Foreground="White"/>
                            </Grid>
                        </Grid>

                        <!-- Segunda fila: Filtros de fecha y opciones -->
                        <Grid Grid.Row="1" Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Fecha Desde -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Fecha Desde:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding FechaDesde}" 
                                    Width="200" Height="35"
                                    DisplayDateStart="2020-01-01"/>
                            </StackPanel>

                            <!-- Fecha Hasta -->
                            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                <TextBlock Text="Fecha Hasta:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding FechaHasta}" 
                                    Width="200" Height="35"
                                    DisplayDateStart="2020-01-01"/>
                            </StackPanel>

                            <!-- Informaci贸n de rango de fechas -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="15,0,0,0">
                                <TextBlock Text=" Tip: Selecciona un rango de fechas para filtrar las inscripciones" 
                                   FontStyle="Italic" 
                                   Foreground="#6C757D" 
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Checkbox para incluir talleres eliminados -->
                            <StackPanel Grid.Column="3" Margin="15,0,0,0" VerticalAlignment="Center">
                                <CheckBox Content="Incluir talleres eliminados" 
                                  IsChecked="{Binding IncluirTalleresEliminados}"
                                  FontWeight="SemiBold"
                                  Foreground="#495057"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ESTADSTICAS BSICAS -->
            <Border Grid.Row="2" Background="#E8F4FD" BorderBrush="#B3D9FF" BorderThickness="1" 
            CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Inscripciones -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TotalInscripciones}" FontSize="24" FontWeight="Bold" 
                           Foreground="#007ACC" HorizontalAlignment="Center"/>
                        <TextBlock Text="Registros de Inscripci贸n" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Activas -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding InscripcionesActivas}" FontSize="24" FontWeight="Bold" 
                           Foreground="#28A745" HorizontalAlignment="Center"/>
                        <TextBlock Text="Activas" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Pagadas -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding InscripcionesPagadas}" FontSize="24" FontWeight="Bold" 
                           Foreground="#6F42C1" HorizontalAlignment="Center"/>
                        <TextBlock Text="Pagadas" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Canceladas -->
                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding InscripcionesCanceladas}" FontSize="24" FontWeight="Bold" 
                           Foreground="#DC3545" HorizontalAlignment="Center"/>
                        <TextBlock Text="Canceladas" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ESTADSTICAS DETALLADAS -->
            <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
            CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Estad铆sticas Detalladas" FontWeight="SemiBold" FontSize="16" 
                       Margin="0,0,0,15" Foreground="#495057"/>

                    <!-- Totales desglosados cuando S se incluyen talleres eliminados -->
                    <Grid Grid.Row="1" Visibility="{Binding IncluirTalleresEliminados, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Totales de talleres activos -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalMontoTalleresActivos, StringFormat=C2}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#28A745" HorizontalAlignment="Center"/>
                                <TextBlock Text="Activos - Total" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalPagadoTalleresActivos, StringFormat=C2}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#28A745" HorizontalAlignment="Center"/>
                                <TextBlock Text="Activos - Recaudado" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalSaldoTalleresActivos, StringFormat=C2}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#28A745" HorizontalAlignment="Center"/>
                                <TextBlock Text="Activos - Pendiente" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="TALLERES ACTIVOS" FontSize="12" FontWeight="Bold" 
                                   Foreground="#28A745" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Totales de talleres eliminados -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalMontoTalleresEliminados, StringFormat=C2}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#DC3545" HorizontalAlignment="Center"/>
                                <TextBlock Text="Eliminados - Total" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalPagadoTalleresEliminados, StringFormat=C2}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#DC3545" HorizontalAlignment="Center"/>
                                <TextBlock Text="Eliminados - Recaudado" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalSaldoTalleresEliminados, StringFormat=C2}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#DC3545" HorizontalAlignment="Center"/>
                                <TextBlock Text="Eliminados - No Cobrado" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="TALLERES ELIMINADOS" FontSize="12" FontWeight="Bold" 
                                   Foreground="#DC3545" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- L铆nea separadora -->
                        <Border Grid.Row="2" Height="1" Background="#DEE2E6" Margin="0,5,0,10"/>

                        <!-- Totales generales -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalMontoGeneral, StringFormat=C2}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#495057" HorizontalAlignment="Center"/>
                                <TextBlock Text="TOTAL GENERAL" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalPagadoGeneral, StringFormat=C2}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#495057" HorizontalAlignment="Center"/>
                                <TextBlock Text="TOTAL RECAUDADO" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="{Binding TotalSaldoGeneral, StringFormat=C2}" FontSize="18" FontWeight="Bold" 
                                   Foreground="#DC3545" HorizontalAlignment="Center"/>
                                <TextBlock Text="TOTAL NO COBRADO" FontSize="11" HorizontalAlignment="Center" 
                                   Foreground="#6C757D" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Text="RESUMEN GENERAL" FontSize="12" FontWeight="Bold" 
                                   Foreground="#495057" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Totales b谩sicos cuando NO se incluyen talleres eliminados -->
                    <Grid Grid.Row="1" Visibility="{Binding IncluirTalleresEliminados, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Monto Recaudado -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="{Binding MontoTotalRecaudado, StringFormat=C2}" FontSize="18" FontWeight="Bold" 
                               Foreground="#28A745" HorizontalAlignment="Center"/>
                            <TextBlock Text="Recaudado" FontSize="11" HorizontalAlignment="Center" 
                               Foreground="#6C757D" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Monto Pendiente -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="{Binding MontoTotalPendiente, StringFormat=C2}" FontSize="18" FontWeight="Bold" 
                               Foreground="#DC3545" HorizontalAlignment="Center"/>
                            <TextBlock Text="Pendiente" FontSize="11" HorizontalAlignment="Center" 
                               Foreground="#6C757D" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Promedio por Inscripci贸n -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="{Binding Estadisticas.PromedioCostoInscripcionFormateado}" FontSize="18" FontWeight="Bold" 
                               Foreground="#007ACC" HorizontalAlignment="Center"/>
                            <TextBlock Text="Promedio/Inscripci贸n" FontSize="11" HorizontalAlignment="Center" 
                               Foreground="#6C757D" TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Monto Total -->
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center" Margin="5">
                            <TextBlock Text="{Binding Estadisticas.MontoTotalInscripciones, StringFormat=C2}" FontSize="18" FontWeight="Bold" 
                               Foreground="#6F42C1" HorizontalAlignment="Center"/>
                            <TextBlock Text="Monto Total" FontSize="11" HorizontalAlignment="Center" 
                               Foreground="#6C757D" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- TABLA DE DATOS -->
            <DataGrid Grid.Row="4" ItemsSource="{Binding Inscripciones}" 
              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
              MaxHeight="310"
              AlternatingRowBackground="#F8F9FA" RowHeaderWidth="0"
              Margin="0,0,0,15">

                <DataGrid.Columns>
                    <!-- Alumno -->
                    <DataGridTextColumn Header="Alumno" Binding="{Binding NombreAlumno}" 
                                Width="150" IsReadOnly="True"/>

                    <!-- Taller -->
                    <DataGridTextColumn Header="Taller" Binding="{Binding NombreTaller}" 
                                Width="180" IsReadOnly="True"/>

                    <!-- Sede -->
                    <DataGridTextColumn Header="Sede" Binding="{Binding NombreSede}" 
                                Width="120" IsReadOnly="True"/>

                    <!-- Promotor -->
                    <DataGridTextColumn Header="Promotor" Binding="{Binding NombrePromotor}" 
                                Width="120" IsReadOnly="True"/>

                    <!-- Fecha Inscripci贸n -->
                    <DataGridTextColumn Header="Fecha Inscripci贸n" Binding="{Binding FechaInscripcion, StringFormat=dd/MM/yyyy}" 
                                Width="120" IsReadOnly="True"/>

                    <!-- D铆a de la Semana -->
                    <DataGridTextColumn Header="D铆a" Binding="{Binding DiaSemana}" 
                                Width="80" IsReadOnly="True"/>

                    <!-- Costo -->
                    <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C2}" 
                                Width="80" IsReadOnly="True"/>

                    <!-- Saldo -->
                    <DataGridTextColumn Header="Saldo" Binding="{Binding SaldoActual, StringFormat=C2}" 
                                Width="80" IsReadOnly="True"/>

                    <!-- Monto Pagado -->
                    <DataGridTextColumn Header="Pagado" Binding="{Binding MontoPagado, StringFormat=C2}" 
                                Width="80" IsReadOnly="True"/>

                    <!-- Estado de Pago -->
                    <DataGridTextColumn Header="Estado de Pago" Binding="{Binding EstadoPago}" 
                                Width="180" IsReadOnly="True"/>

                    <!-- Progreso -->
                    <DataGridTextColumn Header="Progreso" Binding="{Binding ProgresoPorcentaje, StringFormat={}{0:F1}%}" 
                                Width="80" IsReadOnly="True"/>

                    <!-- D铆as Transcurridos -->
                    <DataGridTextColumn Header="D铆as Trans." Binding="{Binding DiasTranscurridos}" 
                                Width="90" IsReadOnly="True"/>

                    <!-- D铆as Restantes -->
                    <DataGridTextColumn Header="D铆as Rest." Binding="{Binding DiasRestantes}" 
                                Width="90" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- MENSAJE DE ESTADO -->
            <Border Grid.Row="5" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
            CornerRadius="6" Padding="10" 
            Visibility="{Binding MensajeEstado, Converter={StaticResource NotNullConverter}}">
                <TextBlock Text="{Binding MensajeEstado}" FontStyle="Italic" 
                   Foreground="#6C757D" HorizontalAlignment="Center"/>
            </Border>

            <!-- INDICADOR DE CARGA -->
            <Border Grid.Row="0" Grid.RowSpan="6" Background="#80000000" 
            Visibility="{Binding Cargando, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Cargando..." FontSize="18" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
