<UserControl x:Class="ControlTalleresMVP.UI.Component.Administracion.ConfiguracionesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Administracion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="710" Height="auto">
        <StackPanel>
            <TextBlock Text="Configuraciones globales" FontSize="20" Margin="10,10,0,20"/>

            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Costo inscripción:" FontSize="16" VerticalAlignment="Center" Margin="0,0,30,0"/>
                <TextBox Text="{Binding CostoInscripcion, UpdateSourceTrigger=PropertyChanged}" 
                         PreviewTextInput="SoloNumeros_PreviewTextInput"
                         Style="{StaticResource TextBoxCampo}" Width="260"/>

                <Button Content="Guardar"
                        ToolTip="Guardar el costo general de la inscripción"
                        Style="{StaticResource BotonNormal}"
                        Command="{Binding GuardarCostoInscripcionCommand}"
                        Margin="30,0,0,0"
                        Width="120" Cursor=""/>
            </StackPanel>
            
            <StackPanel Margin="10" Orientation="Horizontal">
    <TextBlock Text="Costo por clase:" FontSize="16" VerticalAlignment="Center" Margin="0,0,30,0"/>
    <TextBox Text="{Binding CostoPorClase, UpdateSourceTrigger=PropertyChanged}" 
             PreviewTextInput="SoloNumeros_PreviewTextInput"
             Style="{StaticResource TextBoxCampo}" Width="260"/>

    <Button Content="Guardar"
            ToolTip="Guardar el costo general de la inscripción"
            Style="{StaticResource BotonNormal}"
            Command="{Binding GuardarCostoClaseCommand}"
            Margin="30,0,0,0"
            Width="120" Cursor=""/>
</StackPanel>
        </StackPanel>
    </Border>
</UserControl>
