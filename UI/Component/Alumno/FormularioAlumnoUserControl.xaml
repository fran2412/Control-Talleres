<UserControl x:Class="ControlTalleresMVP.UI.Component.Alumno.FormularioAlumnoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Alumno"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d" d:DesignWidth="900" Height="600">
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="400" Height="auto"
        BorderThickness="1,1,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="33.2"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                
                <Label Content="Registrar alumno" FontSize="20" FontFamily="Inter 28pt 28pt ExtraBold"
HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1,-1,0,0" Foreground="#FF3E3E3E" Grid.Row="0"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" MaxHeight="200" Margin="15,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <WrapPanel Grid.Row="0">
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Nombre completo" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CampoTextoNombre, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource TextBoxCampo}" 
                       Height="30" HorizontalAlignment="Left" Width="260"
                       Tag="Ej. Juan Rodolfo Fernández López"/>
                            </StackPanel>

                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Teléfono" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CampoTextoTelefono, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource TextBoxCampo}" 
                       Height="30" HorizontalAlignment="Left" Width="260"
                       Tag="Ej. 1234567890"/>
                            </StackPanel>
                        </WrapPanel>

                        <Expander Grid.Row="1" Margin="0,20,0,0" Header="Inscribir en taller"
                                  IsExpanded="{Binding InscribirEnTaller, Mode=TwoWay}">
                            <Grid>
                                <WrapPanel Grid.Row="0">
                                    <StackPanel Margin="0,20,20,0">
                                        <TextBlock Text="*Taller inscrito" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="3,0,0,3"/>
                                        <ComboBox ItemsSource="{Binding Opciones, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
SelectedItem="{Binding TallerInscritoSeleccionadoItem, 
              Mode=TwoWay,
              UpdateSourceTrigger=PropertyChanged}" 
              SelectedIndex="{Binding TallerInscritoSeleccionadoIndex,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              Height="30" Width="260" FontSize="16" Style="{StaticResource MinimalComboBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,20,20,0">
                                        <TextBlock Text="Sede" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="3,0,0,3"/>
                                        <ComboBox ItemsSource="{Binding Opciones, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                        SelectedItem="{Binding SedeSeleccionadaItem, 
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged}" 
                        SelectedIndex="{Binding SedeSeleccionadaIndex,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Height="30" Width="260" FontSize="16" Style="{StaticResource MinimalComboBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,20,20,0">
                                        <TextBlock Text="Promotor" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="3,0,0,3"/>
                                        <ComboBox ItemsSource="{Binding Opciones, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                              SelectedItem="{Binding SedeSeleccionadaItem, 
                                                        Mode=TwoWay,
                                                        UpdateSourceTrigger=PropertyChanged}" 
                                              SelectedIndex="{Binding SedeSeleccionadaIndex,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Height="30" Width="260" FontSize="16" Style="{StaticResource MinimalComboBoxStyle}"/>
                                    </StackPanel>
                                </WrapPanel>
                            </Grid>
                        </Expander>
                    </Grid>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">

                    <!-- Botón Cancelar -->
                    <Button Content="CANCELAR" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Width="auto" Height="50" Style="{StaticResource BotonNormal}" Command="{Binding CancelarRegistrarAlumnoCommand}"/>

                    <!-- Botón Principal (Agregar o Guardar) -->
                    <Button Content="Registrar alumno" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="auto" Height="50" Margin="15,0,20,0" Style="{StaticResource FeaturedButton}" 
                        Command="{Binding RegistrarAlumnoCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
