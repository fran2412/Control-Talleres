<UserControl x:Class="ControlTalleresMVP.UI.Component.Inscripcion.RegistrosInscripcionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Inscripcion"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:converters="clr-namespace:ControlTalleresMVP.Helpers.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600" Height="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Barra superior: búsqueda, rango y acciones -->
                <Grid Grid.Row="0" Margin="20,20,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Buscar -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Desde -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Hasta -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Aplicar -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Limpiar -->
                    </Grid.ColumnDefinitions>

                    <!-- Búsqueda libre -->
                    <TextBox Grid.Column="0" Margin="0,0,10,0"
                             Style="{StaticResource TextBoxCampo}"
                             Text="{Binding MenuInscripcionRegistrosVM.FiltroRegistrosInscripciones, UpdateSourceTrigger=PropertyChanged, Delay=250}"
                             Tag="Buscar (Alumno, Taller, Estado)"
                             FontSize="16"/>

                    <!-- Fecha DESDE -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock Text="Desde:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <DatePicker SelectedDate="{Binding MenuInscripcionRegistrosVM.FechaDesdeRegistros, Mode=TwoWay}"
                                    Width="140"/>
                    </StackPanel>

                    <!-- Fecha HASTA -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <DatePicker SelectedDate="{Binding MenuInscripcionRegistrosVM.FechaHastaRegistros, Mode=TwoWay}"
                                    Width="140"/>
                    </StackPanel>

                    <!-- Checkbox para incluir talleres eliminados -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <CheckBox Content="Incluir talleres eliminados" 
                                  IsChecked="{Binding MenuInscripcionRegistrosVM.IncluirTalleresEliminados, Mode=TwoWay}"
                                  FontWeight="SemiBold"
                                  Foreground="#495057"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" Margin="20"
                          ItemsSource="{Binding MenuInscripcionRegistrosVM.RegistrosInscripcionesView}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Style="{StaticResource DataGridRegistros}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Acciones" Width="95">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource BotonTransparente}"
                                                Command="{Binding DataContext.MenuInscripcionRegistrosVM.CancelarInscripcionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding InscripcionId}"
                                                Cursor="Hand" Margin="6,0,6,0" ToolTip="Cancelar inscripción">
                                            <svgc:SvgViewbox Source="Resources/Icons/EliminarRegistro.svg" Width="28" Height="28"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Columnas del DTO -->
                        <DataGridTextColumn Header="Fecha"       Binding="{Binding FechaInscripcion, StringFormat=dd/MM/yyyy}" Width="110"/>
                        <DataGridTextColumn Header="Taller"       Binding="{Binding TallerNombre}" Width="*"/>
                        <DataGridTextColumn Header="Alumno"       Binding="{Binding AlumnoNombre}" Width="200"/>
                        <DataGridTextColumn Header="Generación"   Binding="{Binding GeneracionNombre}" Width="120"/>
                        <DataGridTextColumn Header="Estado"       Binding="{Binding EstadoTexto}" Width="110"/>
                        <DataGridTextColumn Header="Costo"        Binding="{Binding Monto, StringFormat=C}" Width="110"/>
                        <DataGridTextColumn Header="Pagado"       Binding="{Binding MontoPagado, StringFormat=C}" Width="110"/>
                        <DataGridTextColumn Header="Saldo"        Binding="{Binding SaldoActual, StringFormat=C}" Width="110"/>
                        <DataGridTextColumn Header="%"            Binding="{Binding PorcentajePagado}" Width="60"/>
                        <DataGridTextColumn Header="#Pagos"       Binding="{Binding PagosCount}" Width="80"/>
                        <DataGridTextColumn Header="Último Pago"  Binding="{Binding UltimoPagoFecha, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                        <DataGridTextColumn Header="Método"       Binding="{Binding UltimoPagoMetodo}" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Totales -->
                <StackPanel Grid.Row="2" Margin="20,0,20,20">
                    <!-- Totales principales (talleres activos) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
                        <TextBlock Text="{Binding MenuInscripcionRegistrosVM.TotalMontoInscripciones, StringFormat=Monto Total: {0:C}}"  FontSize="16" FontWeight="SemiBold" Margin="0,0,24,0"/>
                        <TextBlock Text="{Binding MenuInscripcionRegistrosVM.TotalPagadoInscripciones, StringFormat=Recaudado: {0:C}}" FontSize="16" FontWeight="SemiBold" Margin="0,0,24,0"/>
                        <TextBlock Text="{Binding MenuInscripcionRegistrosVM.TotalSaldoInscripciones, StringFormat=Pendiente: {0:C}}"  FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Totales incluyendo eliminados (solo cuando el filtro está activo) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                                Visibility="{Binding MenuInscripcionRegistrosVM.IncluirTalleresEliminados, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Incluyendo eliminados:" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="#6C757D" Margin="0,0,16,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding MenuInscripcionRegistrosVM.TotalMontoConEliminados, StringFormat=Total: {0:C}}"  FontSize="14" FontWeight="SemiBold" Margin="0,0,20,0" Foreground="#6C757D"/>
                        <TextBlock Text="{Binding MenuInscripcionRegistrosVM.TotalPagadoConEliminados, StringFormat=Recaudado: {0:C}}" FontSize="14" FontWeight="SemiBold" Margin="0,0,20,0" Foreground="#6C757D"/>
                        <TextBlock Text="{Binding MenuInscripcionRegistrosVM.TotalSaldoConEliminados, StringFormat=No Cobrado: {0:C}}"  FontSize="14" FontWeight="SemiBold" Foreground="#DC3545"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
