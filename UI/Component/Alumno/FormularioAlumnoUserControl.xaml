<UserControl x:Class="ControlTalleresMVP.UI.Component.Alumno.FormularioAlumnoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Alumno"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d" d:DesignWidth="900">
    <Grid>
        <Border Style="{StaticResource BorderGridBase}" VerticalAlignment="Top" MaxHeight="600" Height="auto"
        BorderThickness="1,1,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="33.2"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                
                <Label Content="Registrar alumno" FontSize="20" FontFamily="Inter 28pt 28pt ExtraBold"
HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1,-1,0,0" Foreground="#FF3E3E3E" Grid.Row="0"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" MaxHeight="400" Margin="15,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <!-- Datos del alumno -->
                        <WrapPanel Grid.Row="0">
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="* Nombre completo" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CampoTextoNombre, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                         Style="{StaticResource TextBoxCampo}" 
                         Height="30" Width="260"
                         Tag="Ej. Juan Rodolfo Fernández López"/>
                            </StackPanel>

                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Teléfono" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <TextBox x:Name="TelefonoTextBox" Text="{Binding CampoTextTelefono, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Style="{StaticResource TextBoxCampo}"
                         PreviewTextInput="TelefonoTextBox_PreviewTextInput"
                         LostFocus="TelefonoTextBox_LostFocus"
                         ToolTip="Ingrese un número de teléfono de 10 dígitos"
                         Height="30" Width="260"
                         Tag="Ej. 1234567890"/>
                            </StackPanel>

                            <!-- Sede -->
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Sede" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding OpcionesSede}"
                                          DisplayMemberPath="Nombre"
                                          SelectedValuePath="IdSede"
                                          SelectedValue="{Binding SedeSeleccionadaId, Mode=TwoWay}"
                                          Width="200" Height="30"
                                          Style="{StaticResource MinimalComboBoxStyle}" />
                            </StackPanel>

                            <!-- Promotor -->
                            <StackPanel Margin="0,20,20,0">
                                <TextBlock Text="Promotor" FontFamily="Inter 24pt 24pt Medium" FontSize="14" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding OpcionesPromotor}"
                                          DisplayMemberPath="Nombre"
                                          SelectedValuePath="IdPromotor"
                                          SelectedValue="{Binding PromotorSeleccionadoId, Mode=TwoWay}"
                                          Width="200" Height="30"
                                          Style="{StaticResource MinimalComboBoxStyle}"/>
                            </StackPanel>
                        </WrapPanel>

                        <!-- Expander de talleres -->
                        <Expander Grid.Row="1" Margin="0,20,0,0" Header="Inscribir en talleres"
                  IsExpanded="{Binding InscribirEnTaller, Mode=TwoWay}"
                  FontSize="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <!-- Listado de talleres -->
                                <ItemsControl ItemsSource="{Binding TalleresDisponibles}" Focusable="False" Grid.Row="0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="1" CornerRadius="5" Padding="10" Margin="3">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="BorderBrush" Value="#DDD"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding EstaSeleccionado}" Value="True">
                                                                <Setter Property="Background" Value="#FFE6F7FF"/>
                                                                <!-- Azul claro -->
                                                                <Setter Property="BorderBrush" Value="SteelBlue"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <WrapPanel>
                                                    <!-- CheckBox para activar inscripción -->
                                                    <CheckBox Content="{Binding Nombre}"
                                              IsChecked="{Binding EstaSeleccionado, Mode=TwoWay}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,15,0"/>

                                                    <!-- Abono -->
                                                    <StackPanel Margin="0,0,15,0">
                                                        <TextBlock Text="Abono" FontFamily="Inter 24pt 24pt Medium" FontSize="14"/>
                                                        <TextBox Text="{Binding Abono, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                 IsEnabled="{Binding EstaSeleccionado}"
                                                 Width="100" Height="30"
                                                 PreviewTextInput="AbonoTextBox_PreviewTextInput"/>
                                                    </StackPanel>

                                                    <!-- Saldo pendiente -->
                                                    <StackPanel>
                                                        <TextBlock Text="Saldo pendiente" FontFamily="Inter 24pt 24pt Medium" FontSize="14"/>
                                                        <TextBox Text="{Binding SaldoPendiente, StringFormat=C, Mode=OneWay}" 
                                                 IsReadOnly="True"
                                                 Focusable="False"
                                                 Width="120" Height="30"/>
                                                    </StackPanel>
                                                </WrapPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Totales -->
                                <StackPanel Orientation="Vertical" Margin="10" Grid.Row="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Total de costos: " FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding TotalCostos, StringFormat=C}" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Total abonado: " FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding TotalAbonado, StringFormat=C}" 
                                   FontSize="16" FontWeight="Bold" Foreground="Green"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Saldo pendiente total: " FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding SaldoPendienteTotal, StringFormat=C}" 
                                   FontSize="16" FontWeight="Bold" Foreground="DarkRed"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Expander>
                    </Grid>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">

                    <!-- Botón Cancelar -->
                    <Button Content="CANCELAR" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Width="auto" Height="50" Style="{StaticResource BotonNormal}" Command="{Binding CancelarRegistrarAlumnoCommand}"/>

                    <!-- Botón Principal (Agregar o Guardar) -->
                    <Button x:Name="RegistrarAlumnoButton" Content="Registrar alumno" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Command="{Binding RegistrarAlumnoCommand}"
                            Width="auto" Height="50" Margin="15,0,20,0" 
                            Style="{StaticResource FeaturedButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
