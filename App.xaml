<Application x:Class="ControlTalleresMVP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:helpers="clr-namespace:ControlTalleresMVP.Helpers"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ControlTalleresMVP"
             xmlns:vmmenu="clr-namespace:ControlTalleresMVP.ViewModel.Menu"
             xmlns:alumnocomponent="clr-namespace:ControlTalleresMVP.UI.Component.Alumno"
             xmlns:inscripcioncomponent="clr-namespace:ControlTalleresMVP.UI.Component.Inscripcion"
             xmlns:pagocomponent="clr-namespace:ControlTalleresMVP.UI.Component.Pago"
             xmlns:tallercomponent="clr-namespace:ControlTalleresMVP.UI.Component.Taller"
             xmlns:iniciocomponent="clr-namespace:ControlTalleresMVP.UI.Component.Inicio"
             
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/Styles/TextBox.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Labels.xaml"/>
                <ResourceDictionary Source="Resources/Styles/PasswordBox.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Borders.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ComboBoxs.xaml"/>
                <ResourceDictionary Source="Resources/Styles/DataGridDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vmmenu:MenuAlumnosViewModel}">
                <alumnocomponent:AlumnoUserControl/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmmenu:MenuInscripcionesViewModel}">
                <inscripcioncomponent:InscripcionTallerUserControl/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmmenu:MenuPagosViewModel}">
                <pagocomponent:PagoUserControl/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmmenu:MenuTalleresViewModel}">
                <tallercomponent:TallerUserControl/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vmmenu:MenuInicioViewModel}">
                <iniciocomponent:InicioUserControl/>
            </DataTemplate>
            
            <helpers:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        
        
            
        </ResourceDictionary>
        
        
    </Application.Resources>
</Application>
