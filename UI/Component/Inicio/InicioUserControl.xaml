<UserControl x:Class="ControlTalleresMVP.UI.Component.Inicio.InicioUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlTalleresMVP.UI.Component.Inicio"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="{StaticResource BrushFondo}">
        <!-- Contenedor principal -->
        <Border Background="White" 
                CornerRadius="20" 
                Margin="20" 
                Padding="30">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header con logo y título -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo placeholder -->
                    <Border Grid.Column="0"
                            Width="80" Height="80"
                            Background="#E3F2FD"
                            CornerRadius="40"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                        <TextBlock Text="🏫" 
                                   FontSize="40"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Título y subtítulo -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="¡Bienvenido al Sistema!" 
                                   FontFamily="Inter 28pt 28pt ExtraBold"
                                   FontSize="28"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Control de Talleres Escolares" 
                                   FontFamily="Inter 24pt 24pt Medium"
                                   FontSize="16"
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Gestiona alumnos, talleres, inscripciones y pagos de manera eficiente" 
                                   FontFamily="Inter 24pt 24pt Medium"
                                   FontSize="14"
                                   Foreground="#95A5A6"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>

                <!-- Contenido principal con estadísticas -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tarjeta de Alumnos -->
                    <Border Grid.Column="0" 
                            Background="#E8F5E8" 
                            CornerRadius="15" 
                            Margin="0,0,10,0"
                            Padding="20">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👥" 
                                       FontSize="40" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Alumnos" 
                                       FontFamily="Inter 28pt 28pt SemiBold"
                                       FontSize="18"
                                       Foreground="#27AE60"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Gestiona la información de todos los estudiantes" 
                                       FontFamily="Inter 24pt 24pt Medium"
                                       FontSize="12"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Tarjeta de Talleres -->
                    <Border Grid.Column="1" 
                            Background="#E3F2FD" 
                            CornerRadius="15" 
                            Margin="5,0"
                            Padding="20">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🎨" 
                                       FontSize="40" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Talleres" 
                                       FontFamily="Inter 28pt 28pt SemiBold"
                                       FontSize="18"
                                       Foreground="#2196F3"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Administra los talleres y sus horarios" 
                                       FontFamily="Inter 24pt 24pt Medium"
                                       FontSize="12"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Tarjeta de Pagos -->
                    <Border Grid.Column="2" 
                            Background="#FFF3E0" 
                            CornerRadius="15" 
                            Margin="10,0,0,0"
                            Padding="20">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="💰" 
                                       FontSize="40" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Pagos" 
                                       FontFamily="Inter 28pt 28pt SemiBold"
                                       FontSize="18"
                                       Foreground="#FF9800"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Controla los pagos e inscripciones" 
                                       FontFamily="Inter 24pt 24pt Medium"
                                       FontSize="12"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Footer con información adicional -->
                <Grid Grid.Row="2" Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Información del sistema -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="📊 Sistema de Gestión Escolar" 
                                   FontFamily="Inter 28pt 28pt SemiBold"
                                   FontSize="16"
                                   Foreground="#34495E"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Versión 1.0 - Desarrollado para instituciones educativas" 
                                   FontFamily="Inter 24pt 24pt Medium"
                                   FontSize="12"
                                   Foreground="#7F8C8D"/>
                    </StackPanel>

                    <!-- Fecha actual -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Text="Sistema de Gestión" 
                                   FontFamily="Inter 28pt 28pt SemiBold"
                                   FontSize="14"
                                   Foreground="#2C3E50"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="Control de Talleres" 
                                   FontFamily="Inter 24pt 24pt Medium"
                                   FontSize="12"
                                   Foreground="#7F8C8D"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
